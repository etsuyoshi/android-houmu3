<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/draw_background_grad_black" >
    
    <TextView
        android:id="@+id/tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="@string/init_title"
        android:textSize="24dp"
        tools:context=".MainActivity" />
	<TextView
	    android:id="@+id/tx_sub_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tx_title"
        android:text=""
        android:textSize="10dp"
        android:gravity="right"
        tools:context=".MainActivity"
        android:background="#000000"
        android:textColor="#ffffff"
        />
	
    <Button
        android:id="@+id/bt_start"
        android:background="@drawable/draw_button_grad"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:height="40dp"
        android:layout_below="@+id/tx_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="onClick"
        android:text="@string/init_start" />
    <Button
        android:id="@+id/bt_exit"
        android:background="@drawable/draw_button_grad"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:height="40dp"
        android:layout_below="@+id/bt_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:text="@string/init_exit" />
    <!-- 
    <Button 
        android:id="@+id/bt_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        />
    -->

</RelativeLayout>